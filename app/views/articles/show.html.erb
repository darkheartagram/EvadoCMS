<h1><%= @article.name %></h1>

<p><%= @article.content %></p>

<p>Published at: <%= @article.created_at %></p>
<p>Last edited at: <%= @article.updated_at %></p>
<% if signed_in? %>
    <%= link_to 'Edit', edit_article_path(@article) %>
    <%= link_to 'Destroy', @article, :confirm => 'Are you sure?', :method => :delete %>
<% end %>
